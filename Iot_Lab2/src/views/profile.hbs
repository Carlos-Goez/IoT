<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto ">
            <div class="card text-center">
                <div class="card-body">
                    <h3>Welcome {{user.nombre}}</h3>
                    <h4>{{user.email}}</h4>
                </div>
            </div>
            <div class="text-center">
                <h4 style="align-content: center;">Sensores</h4>
            </div>
            <div class="card text-center">
                <div class="card-body">
                    <table class="table table-striped table-bordered mydatatable" style="width: 100%;">
                        <thead>
                            <tr>
                                <th>Sensor</th>
                                <th>Temperatura</th>
                                <th>Humedad</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each sensor}}
                            <tr>
                                <td>{{sensor}}</td>
                                <td>{{temp}}</td>
                                <td>{{hum}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="text-center">
                <h4 style="align-content: center;">Actuadores</h4>
            </div>
            {{#each actuadores}}
            <div class="col-md-12 ">
                <div class="card text-center mx-auto">
                    <div class="card-body">
                        <h4 class="card-title text-uppercase">
                            <div> Actuador {{actuador}} </div>
                            <div>
                                {{#if estado}}
                               <a href="/editOFF/{{id}}" class="btn btn-secondary" style="background: green;">ON</a>
                               {{else}}
                               <a href="/editON/{{id}}" class="btn btn-secondary" style="background:brown;">OFF</a>
                               {{/if}}
                            </div>
                        </h4>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>

    </div>
</div>